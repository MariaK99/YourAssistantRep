@model (int score, int step, float multiply)

@{
    ViewData["Title"] = "ShowResult";
}
<div class="page-header section-dark" style="background-image: url('/assets/img/castle1.jpg')" ; width: 100%;>

    <div class="container" style="color: white">
        
        <div col-md-12 pt-3>
            <br>
            <h1>Поздравляем!!! Вы победили!</h1>
            <br>
            <h4>Ваш итоговый счёт - @Model.score</h4>
            <h4>Количество сделанных ходов - @Model.step</h4>
            <h4>Множитель сложности - @Model.multiply</h4>
            <br />

            <a asp-area="" asp-controller="Game" asp-action="KingNumbers" class="btn btn-primary btn-round">Новая игра</a>
            <a asp-area="" asp-controller="Home" asp-action="Rating" class="btn btn-primary btn-round">Перейти к рейтингу</a>
        </div>
        
    </div>
</div>

<div class="" style="background: linear-gradient(0deg, rgba(255,255,255,0.8) 0%, rgba(14,27,51,1) 100%);">

    <br />
    <br />
</div>
