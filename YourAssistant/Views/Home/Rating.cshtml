@model List<YourAssistant.Models.LevelGameRating>

@{
    ViewData["Title"] = "Rating";
}

    <div class="page-header section-dark" style="background-image: url('./assets/img/antoine-barres.jpg')">
        <h1>Страница с рейтингом</h1>
        <h2>Низкая сложность</h2>
        @foreach (LevelGameRating rating in Model)
        {
            if (rating.Level.Name == "Легко")
            {
                <div class="d-flex flex-row">
                    <div class="p-3">@rating.User.Name</div>
                    <div class="p-1">@rating.Points</div>
                </div>
            }
        }
        <h2>Средняя сложность</h2>
        @foreach (LevelGameRating rating in Model)
        {
            if (rating.Level.Name == "Нормально")
            {
                <div class="d-flex flex-row">
                    <div class="p-3">@rating.User.Name</div>
                    <div class="p-1">@rating.Points</div>
                </div>
            }
        }
        <h2>Высокая сложность</h2>
        @foreach (LevelGameRating rating in Model)
        {
            if (rating.Level.Name == "Сложно")
            {
                <div class="d-flex flex-row">
                    <div class="p-3">@rating.User.Name</div>
                    <div class="p-1">@rating.Points</div>
                </div>
            }
        }
    </div>

