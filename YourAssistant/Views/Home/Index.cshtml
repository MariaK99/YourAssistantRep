@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h2 class="display-4">Welcome to the club, body</h2>

        <div id="thumbnail-preview-indicators" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <a asp-controller="Season" asp-action="ShowSeries" asp-route-name="First">
                       <img class="img-responsive" src="https://bootstraptema.ru/snippets/slider/2017/thumbslider/thumbslider-1.jpg">
                    </a>
                </div>
                <div class="carousel-item">
                    <a asp-controller="Characters" asp-action="List">
                        <img class="img-responsive" src="https://bootstraptema.ru/snippets/slider/2017/thumbslider/thumbslider-2.jpg">

                    </a>
                </div>
                <div class="carousel-item">
                    <img class="img-responsive" src="https://bootstraptema.ru/snippets/slider/2017/thumbslider/thumbslider-3.jpg">

                </div>
            </div>
            <a class="left carousel-control" href="#thumbnail-preview-indicators" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" href="#thumbnail-preview-indicators" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>

        @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
    </div>
