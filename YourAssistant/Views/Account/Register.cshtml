@model YourAssistant.ViewModels.RegisterModel

    <div class="page-header section-dark" style="background-image: url('/assets/img/castle1.jpg')" ; width: 100%;>

        <div class="container" style="color: white">
            <br>
            <br>
            <h2 class="display-3">Регистрация</h2>

            <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div>
                    <div>
                        <h3 asp-for="Name">Введите Name</h3>
                        <input type="text" asp-for="Name" class="form-control col-lg-3" placeholder="Никнейм" />
                        <span asp-validation-for="Name" />
                    </div>
                    <div>
                        <h3 asp-for="Email">Введите Email</h3>
                        <input type="text" asp-for="Email" class="form-control col-lg-3" placeholder="е-mail" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div>
                        <h3 asp-for="Password">Введите пароль</h3>
                        <input asp-for="Password" class="form-control col-lg-3" placeholder="Пароль" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div>
                        <h3 asp-for="ConfirmPassword">Повторите пароль</h3>
                        <input asp-for="ConfirmPassword" class="form-control col-lg-3" placeholder="Повторите пароль" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div>
                        <br>
                        <input type="submit" value="Регистрация" class="btn btn-outline-dark btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
<div class="" style="background: linear-gradient(0deg, rgba(255,255,255,0.8) 0%, rgba(14,27,51,1) 100%);">

    <br />
    <br />
</div>