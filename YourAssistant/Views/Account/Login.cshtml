@model YourAssistant.ViewModels.LoginModel

<div class="page-header section-dark" style="background-image: url('/assets/img/castle1.jpg')" ; width: 100%;>

    <div class="container" style="color: white">
        <h2 class="display-3">Вход на сайт</h2>

        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <h2 asp-for="Email">Введите Email</h2>
                    <input type="text" asp-for="Email" class="form-control col-lg-3" placeholder="Логин/Почта"/>
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <h2 asp-for="Password">Введите пароль</h2>
                    <input asp-for="Password" class="form-control col-lg-3" placeholder="Пароль"/>
                    <span asp-validation-for="Password" />
                </div>

            </div>
            <div class="form-group">
                <br>
                <input type="submit" value="Войти" class="btn btn-outline-dark btn-primary" />
            </div>
            <a asp-action="Register" asp-controller="Account">Забыли пароль?</a>
        </form>
    </div>
</div>
<div class="" style="background: linear-gradient(0deg, rgba(255,255,255,0.8) 0%, rgba(14,27,51,1) 100%);">

    <br />
    <br />
</div>